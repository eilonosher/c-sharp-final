<Window x:Class="GamePlay.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GamePlay"
        mc:Ignorable="d"
        Title="Register" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Insert Name"/>
            <TextBox Name="name"/>
            <Label Content="Insert Password"/>
            <PasswordBox Name="pass" />
            <Button Content="Sign Up" Width="75" Height="40" Margin="10" Click="signUpClicked"/>
            <TextBlock Height="100" Margin="20" Name="tbMessages"/>
        </StackPanel>
    </Grid>
</Window>
