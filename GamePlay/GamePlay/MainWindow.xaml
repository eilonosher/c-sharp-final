<Window x:Class="GamePlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GamePlay"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <StackPanel>
            <Button Content="Sign In" Width="75" Height="40" Margin="10" Click="signInClicked"/>
            <Button Content="Register" Width="75" Height="40" Margin="10" Click="registerClicked"/>
            <TextBlock Height="100" Margin="20" Name="tbMessages"/>
        </StackPanel>
    </Grid>
</Window>
